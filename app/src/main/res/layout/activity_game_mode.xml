<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroud2"
    android:padding="16dp"
    android:orientation="vertical">

    <!-- Container for both player image containers side by side -->
    <LinearLayout
        android:id="@+id/playerImagesContainer"
        android:layout_width="wrap_content"
        android:layout_height="262dp"
        android:layout_marginTop="25dp"
        android:gravity="center"
        android:orientation="horizontal">

        <!-- Container for Human Player Image -->
        <FrameLayout
            android:id="@+id/frameHumanPlayer"
            android:layout_width="137dp"
            android:layout_height="120dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/round_back_dark_blue"
            android:clickable="true"
            android:focusable="true"
            android:padding="8dp">

            <ImageView
                android:id="@+id/imageHumanPlayer"
                android:layout_width="110dp"
                android:layout_height="105dp"
                android:contentDescription="Human Player"
                android:src="@drawable/hvsh" />
        </FrameLayout>

        <Space
            android:layout_width="25dp"
            android:layout_height="wrap_content" />

        <!-- Container for Robot Player Image -->
        <FrameLayout
            android:id="@+id/frameRobotPlayer"
            android:layout_width="137dp"
            android:layout_height="120dp"
            android:layout_marginStart="8dp"
            android:background="@drawable/round_back_dark_blue"
            android:clickable="true"
            android:focusable="true"
            android:padding="8dp">

            <ImageView
                android:id="@+id/imageRobotPlayer"
                android:layout_width="110dp"
                android:layout_height="105dp"
                android:contentDescription="Robot Player"
                android:src="@drawable/humanplaywithai" />
        </FrameLayout>
    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="16dp" />

    <!-- Container for Settings option -->
    <LinearLayout
        android:id="@+id/settingsContainer2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_marginTop="16dp">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/round_back_dark_blue"
            android:padding="8dp"
            android:clickable="true"
            android:focusable="true">

            <LinearLayout
                android:layout_width="137dp"
                android:layout_height="120dp"
                android:orientation="horizontal"
                android:gravity="center">

                <!-- Image for Settings -->
                <ImageView
                    android:id="@+id/imageSettings"
                    android:layout_width="110dp"
                    android:layout_height="105dp"
                    android:contentDescription="Settings"
                    android:src="@drawable/setting" />
            </LinearLayout>
        </FrameLayout>
    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="16dp" />

    <!-- Container for Music and Sound selection using circles -->

</LinearLayout>
